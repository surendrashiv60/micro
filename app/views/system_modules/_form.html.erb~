<%= form_for(@system_module) do |f| %>
  <% if @system_module.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@system_module.errors.count, "error") %> prohibited this system_module from being saved:</h2>

      <ul>
      <% @system_module.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
	<tr>
		<td><%= f.label :system_module_name %></td>
		<td>&nbsp;&nbsp;</td>
		<td><%= f.text_field :system_module_name %></td>
	</tr>
	<tr>
		<td><%= f.label :system_module_description %></td>
		<td>&nbsp;&nbsp;</td>
		<td><%= f.text_area :system_module_description, :rows => 3, :cols => 30 %></td>
	</tr>
	<tr>
		<td><%= f.label :system_module_order %></td>
		<td>&nbsp;&nbsp;</td>
		<td><%= f.number_field :system_module_order %></td>
	</tr>
	<tr>
		<td><%= f.label :is_active %></td>
		<td>&nbsp;&nbsp;</td>
		<td><%= f.check_box :is_active %></td>
	</tr>
  	<tr>
		<td></td>
		<td>&nbsp;&nbsp;</td>
		<td><%= f.submit "Submit", :class => "btn btn-primary" %>&nbsp;&nbsp;<%= link_to 'Back', system_modules_path, :class => "btn" %></td>
	</tr>
  </table>
<% end %>
