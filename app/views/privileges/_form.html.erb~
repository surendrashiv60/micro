<%= form_for(@privilege) do |f| %>
  <% if @privilege.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@privilege.errors.count, "error") %> prohibited this privilege from being saved:</h2>

      <ul>
      <% @privilege.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr>
	<td><%= f.label :privilege_name %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.text_field :privilege_name %></td>
    </tr>
    <tr>
	<td><%= f.label :privilege_description %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.text_area :privilege_description, :rows => 3, :cols => 30 %></td>
    </tr>
    <tr>
	<td><%= f.label :controller %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.text_field :controller %></td>
    </tr>
    <tr>
	<td><%= f.label :action %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.text_field :action %></td>
    </tr>
    <tr>
	<td><%= f.label :system_module_id %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.select(:system_module_id, Manufacturer.find(:all).collect {|u| [u.name, u.id]}, :prompt => 'Select') %></td>
    </tr>
    <tr>
	<td><%= f.label :is_active %></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.check_box :is_active %></td>
    </tr>
    <tr>
	<td></td>
	<td>&nbsp;&nbsp;</td>
	<td><%= f.submit "Submit", :class => "btn btn-primary" %>&nbsp;&nbsp;<%= link_to 'Back', privileges_path, :class => "btn" %></td>
    </tr>
  </table>
<% end %>
