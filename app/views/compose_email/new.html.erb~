			<td style="padding: 5px;">&nbsp;&nbsp;</td>
			<td style="padding: 5px;"><%= text_field_tag :contact_email %>&nbsp;&nbsp;<a href="#" class="add_contact"><i class="fa fa-plus-circle"></i>&nbsp;Add</a></td>
		    </tr>
