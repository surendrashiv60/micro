		    <th>Address</th>
		    <th>Is active</th>
		    <th>Action</th>
		  </tr>
		<% @count = 0 %>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= @count += 1 %></td>
		    <td><%= user.username %></td>
		    <td><%= user.gender %></td>
		    <td><%= user.contact_no %></td>
		    <td><%= user.address %></td>
		    <td><%= user.is_active %></td>
		    <td><%#= link_to 'Show', user %>
		    <% if has_permission('users', 'edit') %>
		    	<%= link_to 'Edit', edit_user_path(user) %>
		    <% end %>
		    <% if has_permission('users', 'destroy') %>
		    	<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    <% end %>
		  </tr>
		<% end %>
		</table>
		<br/>
		<% if has_permission('users', 'new') %>
			<%= link_to 'New User', new_user_path, :class => "btn btn-primary" %>
